{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/fp_micro.exe",
      "args": ["id", "15ac0ed0-dbd4-8a95-5eec-4cf3e04fc771"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "fp_path", "value": "F:/Flashpoint/Flashpoint 6.2 Infinity" }],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
